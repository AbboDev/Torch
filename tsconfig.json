{
  "compilerOptions": {
    "target": "es2017",
    "moduleResolution": "node",
    "module": "CommonJS",
    "strict": true,
    "sourceMap": true,

    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/phaser/types"
    ],
    "types": [
      "Phaser"
    ],

    "baseUrl": "./src",
    "paths": {
      "Config/*": ["./config/*"],
      "Entities/Bullets/*": ["./entities/bullets/*"],
      "Entities/Weapons/*": ["./entities/weapons/*"],
      "Entities/Hitboxes/*": ["./entities/hitboxes/*"],
      "Entities/*": ["./entities/*"],
      "Miscellaneous/*": ["./miscellaneous/*"],
      "Scenes/*": ["./scenes/*"]
    }
  },
  "include": [
    "./src/**/*"
  ]
}
