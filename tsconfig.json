{
  "compilerOptions": {
    "target": "es2017",
    "moduleResolution": "node",
    "module": "CommonJS",
    "strict": true,
    "sourceMap": true,

    "typeRoots": [
      "./node_modules/phaser/types",
      "./node_modules/@types",
      "./src/@types"
    ],

    "baseUrl": "./src",
    "paths": {
      "Config/*": ["./Config/*"],
      "Entities/Bullets/*": ["./Entities/Bullets/*"],
      "Entities/Hitboxes/*": ["./Entities/Hitboxes/*"],
      "Entities/Weapons/*": ["./Entities/Weapons/*"],
      "Entities/*": ["./Entities/*"],
      "Miscellaneous/*": ["./Miscellaneous/*"],
      "Scenes/*": ["./Scenes/*"]
    }
  },
  "include": [
    "./src/**/*"
  ]
}
